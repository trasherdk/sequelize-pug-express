extends layout

block title
  h1.my-4 Новая запись

block content
  form(action='/add', onsubmit="return validation()", method="POST")
    .form-group
      label(for='title') Заголовок
        span(style="color:red")
      input#title.form-control(type='text',name='title')
    .form-group
      label(for='text') Заголовочный текст
        span(style="color:red")
      textarea#text.form-control(rows='5',name='text')
    .form-group
      label(for='textFull') Текст
        span(style="color:red")
      textarea#textFull.form-control(rows='10',name='textFull')
    button.btn.btn-outline-primary(type='submit') Добавить запись

block widget

block script
  script.
    function validation (){
      var author = $('#author').val();
      var title = $('#title').val();
      var text = $('#text').val();
      var textFull = $('#textFull').val();
      
      $(".error").remove();
      
      function message (message) {
        $('#error').html('<div class="alert alert-danger error">' + message + '<button class="close" type="button" aria-label="Close" onClick="hello(this)"><span aria-hidden="true">&times;</span></button></div>');
      }
      
       if (title.length < 1) {
        message('Требуется заголовок');
        return false
      }
       if (text.length < 1) {
        message('Требуется заголовочный текст');
        return false
      }
       if (textFull.length < 1) {
        message('Требуется текст');
        return false
      }
    }