doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Express
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    link(rel='stylesheet', href='/style.css')
    style
      
  body(style="display: flex;min-height: 100vh;flex-direction: column")
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='/blog/') Express
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/blog/') Blog
    main.container(style="flex:1 0 auto;")
      != messages('message_template', locals)
      if errors
        each error, key in errors
          .alert.alert-danger #{error.msg}
      block content
    footer
      .container(style="text-align:center; color:black")
        a(href="https://northarea.ru/",target="_blank") NorthArea.ru
    script(src='https://code.jquery.com/jquery-3.3.1.min.js', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
    script.
      $(document).ready(function(){
        $('.delete-article').on('click', function(e){
          $target = $(e.target);
          var id = $target.attr('data-id');
          $.ajax({
            type:'DELETE',
            url: '/blog/'+id,
            success: function(response){
              alert('Deleting Article');
              window.location.href='/blog/';
            },
            error: function(err){
              console.log(err);
            }
          });
        });
      });

