extends layout

block title
  // Title
  h1.my-4 #{article.title}

block content
  // Author
  p.lead by 
    a(href='/') #{article.author}
  hr
  // Date/Time
  p Posted on #{article.createdAt}
  hr
  // Preview Image
  img.img-fluid.rounded(src='https://placehold.it/900x300', alt='')
  hr
  // Post Content
  p #{article.textFull}
  hr
  // Comments Form
  .card.my-4
    h5.card-header Leave a Comment:
    .card-body
      form
        .form-group
          textarea.form-control(rows='3')
        button.btn.btn-outline-primary(type='submit') Submit
