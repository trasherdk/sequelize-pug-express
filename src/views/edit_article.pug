extends layout

block title
  h1.my-4 #{title}

block content
  form(action="/edit/"+article.uuid, onsubmit="return validation()", method="POST")
    .form-group
      label(for='author') Title
        span(style="color:red")
      input#author.form-control(type='text',name='title',value=article.title)
    .form-group
      label(for='text') Text
        span(style="color:red")
      textarea#text.form-control(rows='5',name='text') #{article.text}
    .form-group
      label(for='textFull') Text Full
        span(style="color:red")
      textarea#text.form-control(rows='10',name='textFull') #{article.textFull}
    hr
    button.btn.btn-outline-primary(type='submit') Save

block widget

block script
  script.
    function validation (){
      var author = $('#author').val();
      var title = $('#title').val();
      var text = $('#text').val();
      var textFull = $('#textFull').val();
      
      $(".error").remove();
      
      function message (message) {
        $('#error').html('<div class="alert alert-danger error">' + message + '<b style="float:right; cursor:pointer; font-weight: normal" onclick="hello(this)">[x]</b></div>');
      }
       if (title.length < 1) {
        message('Title is required');
        return false
      }
       if (text.length < 1) {
        message('Text Chort is required');
        return false
      }
       if (textFull.length < 1) {
        message('Text Full is required');
        return false
      }
    }