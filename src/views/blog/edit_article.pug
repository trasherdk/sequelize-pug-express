extends ../layout

block content
  h1 #{title}
  form(action="/blog/edit/"+article.id,method="POST")
    .form-group
      label(for='author') Author
      input#author.form-control(type='text',name='author',value=article.author)
    .form-group
      label(for='author') Title
      input#author.form-control(type='text',name='title',value=article.title)
    .form-group
      label(for='text') Text
      textarea#text.form-control(rows='3',name='text') #{article.text}
    hr
    button.btn.btn-outline-primary(type='submit') Save
